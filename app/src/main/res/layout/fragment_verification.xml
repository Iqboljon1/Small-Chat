<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VerificationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_back"
            app:tint="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_verification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Verification"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_back"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_verificationDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/description_verification"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_verification" />

        <TextView
            android:id="@+id/tv_onNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="On number:"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_verificationDescription"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="+998906330999"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintLeft_toRightOf="@id/tv_onNumber"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_verificationDescription"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onNumber"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/card_2"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onNumber"
            app:layout_constraintLeft_toRightOf="@id/card_1"
            app:layout_constraintRight_toLeftOf="@id/card_3"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onNumber"
            app:layout_constraintLeft_toRightOf="@id/card_2"
            app:layout_constraintRight_toLeftOf="@id/card_4"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:maxLength="1"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onNumber"
            app:layout_constraintLeft_toRightOf="@id/card_3"
            app:layout_constraintRight_toLeftOf="@id/card_5"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onNumber"
            app:layout_constraintLeft_toRightOf="@id/card_4"
            app:layout_constraintRight_toLeftOf="@id/card_6"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:maxLength="1"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/tv_onNumber"
            app:layout_constraintLeft_toRightOf="@id/card_5"
            app:layout_constraintRight_toRightOf="parent"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/tv_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="normal"
                android:maxLength="1"
                android:layout_gravity="center"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_failureDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/btn_2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/purple_500"
            android:textSize="15sp"
            android:textStyle="normal"
            android:gravity="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_2"
            app:backgroundTint="@color/black"
            android:text="1"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="2"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_5"
            app:layout_constraintLeft_toRightOf="@id/btn_2"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="3"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_5"
            app:backgroundTint="@color/black"
            android:text="4"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_8"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="5"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_8"
            app:layout_constraintLeft_toRightOf="@id/btn_5"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="6"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_8"
            app:backgroundTint="@color/black"
            android:text="7"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="8"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/btn_0"
            app:layout_constraintLeft_toRightOf="@id/btn_8"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="9"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="0"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_backspace"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_0"
            app:layout_constraintRight_toRightOf="parent"
            app:backgroundTint="@color/black"
            android:text="\u232b"
            android:gravity="center"
            app:cornerRadius="8dp"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:textSize="19sp"
            tools:ignore="HardcodedText"
            android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>